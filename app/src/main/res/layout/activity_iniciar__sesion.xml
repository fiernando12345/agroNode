<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Iniciar_Sesion">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginVertical="30dp"
                android:src="@drawable/logo"
                />

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#808080"
                android:textAlignment="center"
                android:hint="Ingresa tu correo">

                <EditText
                    android:id="@+id/txt_IS_Correo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:ems="10"
                    android:textAlignment="center"
                    android:drawableLeft="@drawable/ic_user"
                    android:inputType="textEmailAddress"
                    android:paddingTop="15dp"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:hint="Ingresa tu contraseña">
                <EditText
                    android:id="@+id/txt_IS_Contraseña"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:drawableLeft="@drawable/ic_password"
                    android:ems="10"
                    android:textAlignment="center"
                    android:inputType="textPassword"
                    android:paddingTop="15dp"/>
            </android.support.design.widget.TextInputLayout>


            <CheckBox
                android:layout_marginTop="20dp"
                android:id="@+id/chk_IS_Recordar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recordar Usuario"
                android:textColor="@color/black"
                android:buttonTint="@color/black"
                android:textStyle="bold"
                android:textSize="20dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                >

                <com.spark.submitbutton.SubmitButton
                    android:textSize="14dp"
                    android:id="@+id/btn_IS_Iniciar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Iniciar Sesión"
                    android:textColor="@color/black"
                    app:sub_btn_background="#fff"
                    app:sub_btn_duration="1300"
                    app:sub_btn_line_color="#177c6b"
                    app:sub_btn_ripple_color="#146053"
                    app:sub_btn_tick_color="#fff" />

                <com.spark.submitbutton.SubmitButton
                    android:textSize="13dp"
                    android:id="@+id/btn_IS_Registrarse"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Registrar Nuevo Usuario"
                    android:layout_marginTop="-40dp"
                    android:textColor="@color/black"
                    app:sub_btn_background="#fff"
                    app:sub_btn_duration="1300"
                    app:sub_btn_line_color="#086658"
                    app:sub_btn_ripple_color="#084e70"
                    app:sub_btn_tick_color="#fff" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>